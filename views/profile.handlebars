<div class="row">
 <div class="col-md-4"></div>
    <div class="col-md-4 col-md-offset-2 mb-5">
        {{>_msg}}
        <h1 class="text-center">User Profile</h1>
        <hr>
        <h2 class="text-center">My Orders</h2>
        {{# each orders}}
        <div class="card" style="width: 100% !important;">
            <div class="panel-body">
                <ul class="list-group list-group-flush">
                    {{# each this.items}}
                    <li class="list-group-item">
                        <span class="badge badge-secondary">{{this.price}}</span>
                        {{this.item.title}} | {{this.qty}} Units
                    </li>
                    {{/each}}
                </ul>
            </div>
            <div class="card-footer"><strong>Total Price: ${{this.cart.totalPrice}}</strong></div>
        </div>
        {{/each}}
    </div>
 <div class="col-md-4">
 </div>
</div>

