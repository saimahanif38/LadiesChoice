<div class="row mt-5 mb-5">
  <div class="col-md-3"></div>
  <div class="col-md-6">
  <h4>Your Total Amount to be Paid: $ {{total}}</h4>
  <form action="/charge" method="POST">
  <div class="form-group">
    <label>Email address</label>
    <input type="email" class="form-control" placeholder="Enter email">
    <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
  </div>
  <div class="form-group">
    <label for="name">Name</label>
    <input type="text" class="form-control" placeholder="e.g John.." name="name" required>
  </div>
   <div class="form-group">
    <label for="address">Address</label>
    <input  class="form-control" type="text" name="address" placeholder="Address" required>
  </div>
    
  <div class="form-group">
    <label for="Phone number">Phone Number</label>
    <div class="row">
      <div class="col-md-3">
        <input maxlength="4" class="form-control" type="text" name="phone-number" placeholder="e.g.0345" required>
      </div>
      <div class="col-md-1">-</div>
      <div class="col-md-8">
        <input maxlength="7" class="form-control" type="text" name="phone-number " placeholder="e.g 1234567" required>
      </div>
    </div>
  </div>
<div class="form-group">
    <label for="Phone number">Alternate Phone Number</label>
    <div class="row">
      <div class="col-md-3">
        <input maxlength="4" class="form-control" type="text" name="phone-number" placeholder="e.g.0345" required>
      </div>
      <div class="col-md-1">-</div>
      <div class="col-md-8">
        <input maxlength="7" class="form-control" type="text" name="phone-number " placeholder="e.g 1234567" required>
      </div>
    </div>
  </div>
  <button type="submit" class="btn btn-primary">Order now!</button>
</form>
  </div>
  <div class="col-md-2"></div>
</div>



