<!--Log in Form Start-->
        <div class=" bg container-fluid row alignment colorScheme">
            <div class="col-md-4 col-sm-4 col-xs-12"></div>
            <div class="col-md-4 col-sm-4 col-xs-12">
              {{> _errors}}
              {{> _msg}}
            <!--Form-->
            <form class="form-container" id="login-form" action="/api/login" method="POST">
                <h1>LOG IN FORM</h1>
                 <input type="hidden" name="_csrf" value="{{csrfToken}}">
                    <div class="form-group">
                      <label for="exampleInputEmail1">Email address</label>
                      <input  type="email" class="form-control" id="exampleInputEmail1" placeholder="Email" name="email">
                    </div>
                    <div class="form-group">
                      <label for="exampleInputPassword1">Password</label>
                      <input  type="password" class="form-control" id="exampleInputPassword1" placeholder="Password" name="password">
                    </div>
                    
                    <div class="checkbox">
                      <label><input type="checkbox"> Remember Me</label>
                    </div>
                    <button type="submit"  class="btn btn-success btn-block">Submit</button>
            </form> 
                  <p class=" colorScheme ml-5">If you don't have your profile then Create your account here <a href="/register">Sign Up</a>
                  </p>    
            </div>
            
            <div class="col-md-4 col-sm-4 col-xs-12"></div>
        </div>
        <!--Log in Form End -->    